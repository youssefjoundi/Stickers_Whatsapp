<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_pack_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_margin="10dp"
        android:background="#FFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="25dp"
        >
        <ImageView
            android:id="@+id/pack_try_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:background="#FFFF"
            app:srcCompat="@drawable/sticker_error"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="10dp"
        android:dividerHeight="19.0px"
        android:clipToPadding="false"
        android:elevation="20dp"
        android:background="#FFFF"
        app:cardElevation="20dp"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/card_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FFFF"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:paddingLeft="85dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/add_button_on_list"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:visibility="gone"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:foreground="@drawable/sticker_3rdparty_add"
                        android:contentDescription="@string/add_button_content_description"
                        android:scaleType="center"
                        android:src="@drawable/rectangle_white"
                        android:layout_alignParentEnd="true" />

                    <LinearLayout
                        android:layout_marginRight="70dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/sticker_pack_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"
                                    android:textColor="#000"
                                    android:text="Pack Name "
                                    android:layout_marginRight="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="20dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="@color/blue"
                                android:id="@+id/sticker_pack_publisher"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:text="By publisher"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/image_view_item_pack_fav"
                        android:tint="@color/blue"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/sticker_packs_list_item_image_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@id/add_button_on_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sticker_pack_info" />
            </LinearLayout>
            <LinearLayout
                android:background="#66d4d4d4"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">

                    <TextView
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:id="@+id/item_pack_username"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:gravity="left|center_vertical"
                        android:textSize="10dp"
                        android:layout_marginLeft="2dp"
                        android:text="10 Comments"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        >
                        <ImageView
                            android:padding="2dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/item_pack_downloads"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="marquee"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="Animated Stickers"
                            android:textColor="@color/blue"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        >
                        <ImageView

                            android:padding="2dp"
                            android:tint="@color/blue"
                            android:src="@drawable/ic_size"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:id="@+id/sticker_pack_filesize"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:gravity="left|center_vertical"
                            android:textSize="10dp"
                            android:layout_marginLeft="2dp"
                            android:text="123 kb"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingRight="4dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_user"
                            android:tint="@color/blue"/>

                        <TextView
                            android:id="@+id/item_pack_created"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="marquee"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="10 minutre ago"
                            android:textColor="@color/blue"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:visibility="gone"
        android:elevation="30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/item_pack_premium"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="1dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@color/white" />
        <TextView
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="top"
            android:textColor="@color/white"
            android:text="Premium"
            android:textSize="12dp"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/item_pack_delete"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:tint="@color/white"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="top"
            android:textColor="@color/white"
            android:text="Delete"
            android:textSize="12dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout

        android:visibility="gone"
        android:elevation="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/item_pack_review"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="1dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_time" />
        <TextView
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="top"
            android:textColor="@color/white"
            android:text="On Review"
            android:textSize="12dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>