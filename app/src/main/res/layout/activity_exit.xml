<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFF"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:layout_below="@+id/LinearLayout"
                android:id="@+id/buttons"
                android:weightSum="2"
                android:gravity="center"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
<!--                    android:layout_marginLeft="5dp"-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingVertical="7dp"
                        android:background="@drawable/yes_button"
                        android:text="YES"
                        android:textColor="#fff"
                        android:textSize="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingVertical="7dp"
                        android:text="No"
                        android:textColor="@color/white"
                        android:background="@drawable/no_button"
                        android:textSize="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/LinearLayout"
                android:layout_below="@+id/native_ad_container_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_exit"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:text="Do you Wanted to Exit"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/text_Wait"
                        android:textStyle="bold"
                        android:gravity="center|left"
                        android:textSize="14dp"
                        android:text="Please Wait......"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/native_ad_container_dialog"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.solodroid.ads.sdk.ui.MediumNativeAdView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <!--                <FrameLayout-->
                <!--                    android:id="@+id/native_ad_layout"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_centerVertical="true" />-->

                <!--                <com.facebook.ads.NativeAdLayout-->
                <!--                    android:id="@+id/fan_native"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical" />-->

                <!--                <FrameLayout-->
                <!--                    android:id="@+id/fl_adplaceholder"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content" />-->
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>